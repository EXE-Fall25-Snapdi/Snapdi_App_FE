# Environment Configuration Template for Snapdi App
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file with actual credentials to version control

# =============================================================================
# API CONFIGURATION
# =============================================================================

API_BASE_URL=https://your-api-endpoint.com
API_VERSION=v1

JWT_SECRET_KEY=your_jwt_secret_key_here
REFRESH_TOKEN_EXPIRY=7d
ACCESS_TOKEN_EXPIRY=1h

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_URL=your_database_connection_string
DATABASE_NAME=snapdi_db

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# Cloud Storage
CLOUD_STORAGE_BUCKET=your-storage-bucket
CLOUD_STORAGE_REGION=us-east-1
CLOUD_STORAGE_ACCESS_KEY=your_access_key
CLOUD_STORAGE_SECRET_KEY=your_secret_key

# Payment Services
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
PAYPAL_CLIENT_ID=your_paypal_client_id

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

FCM_SERVER_KEY=your_fcm_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id

# Email Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# SMS Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================

GOOGLE_CLIENT_ID=your_google_client_id
FACEBOOK_APP_ID=your_facebook_app_id
APPLE_CLIENT_ID=your_apple_client_id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

NODE_ENV=development
FLUTTER_ENV=development
DEBUG_MODE=true
LOG_LEVEL=debug
ENABLE_LOGGING=true
ENABLE_DEV_TOOLS=true
MOCK_API_RESPONSES=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

ENCRYPTION_KEY=your_32_character_encryption_key
HASH_SALT_ROUNDS=12
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

MAX_IMAGE_SIZE_MB=10
MAX_IMAGES_PER_UPLOAD=20
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp,heic
MAX_VIDEO_SIZE_MB=100
ALLOWED_VIDEO_FORMATS=mp4,mov,avi

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

PLATFORM_COMMISSION_RATE=0.15
MIN_BOOKING_AMOUNT=50
MAX_BOOKING_AMOUNT=10000
DEFAULT_COUNTRY=US
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token
SENTRY_DSN=your_sentry_dsn
CRASHLYTICS_ENABLED=true
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_CHAT_FEATURE=true
ENABLE_VIDEO_CALLS=false
ENABLE_LIVE_STREAMING=false
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_GEOLOCATION=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

TEST_DATABASE_URL=your_test_database_url
TEST_API_BASE_URL=https://api-staging.snapdi.com
ENABLE_TEST_USERS=true
USE_MOCK_LOCATION=false
MOCK_PAYMENT_SUCCESS=true